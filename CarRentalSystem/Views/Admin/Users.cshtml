@model IEnumerable<CarRentalSystem.ViewModel.ManageUserViewModel>

<div class="container mt-4">
    <h2 class="text-center mb-4">Manage Users</h2>

    <div class="table-responsive shadow">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Fullname</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Date of Birth</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Fullname</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                        <td>@string.Join(", ", user.Roles)</td>
                        <td>
                            <a asp-action="EditUser" asp-route-userId="@user.UserId" class="btn btn-outline-primary btn-sm me-1">Edit</a>
                            <a asp-action="DeleteUser" asp-route-id="@user.UserId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        font-weight: bold;
        color: #1A1A40;
        text-transform: uppercase;
    }

    .table-responsive {
        border-radius: 5px;
    }

    .btn-danger,
    .btn-outline-primary {
        font-weight: bold;
    }

        .btn-danger:hover,
        .btn-outline-primary:hover {
            opacity: 0.9;
        }
</style>
