@model IEnumerable<CarRentalSystem.Models.Car>

<div class="container mt-5">
    <h2 class="text-center mb-4">Manage Cars</h2>

    <div class="text-end mb-4">
        <a asp-action="AddCar" class="btn btn-success">Add New Car</a>
    </div>

    <div class="row g-3">
        @foreach (var car in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@car.Name</h5>
                        <p class="card-text">
                            <strong>License Plate:</strong> @car.LicensePlate <br />
                            <strong>Year:</strong> @car.Year <br />
                            <strong>Price Per Day:</strong> $@car.PricePerDay
                        </p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="EditCar" asp-route-id="@car.Id" class="btn btn-warning btn-sm">Edit</a>
                            <form asp-action="DeleteCar" asp-route-id="@car.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        padding-bottom: 5rem; /* Ensure enough space at the bottom */
    }

    .card {
        margin-bottom: 1.5rem; /* Spacing between cards */
        border: 1px solid #dee2e6;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .card:hover {
            transform: scale(1.01); /* Slight zoom effect on hover */
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* Enhance hover effect */
        }

    .btn {
        font-weight: bold;
    }

    footer {
        background-color: #1A1A40;
        color: white;
        padding: 1rem 0;
        text-align: center;
        position: relative; /* Change to relative to avoid overlap */
    }

        footer a {
            color: #FFA500;
            text-decoration: none;
        }

            footer a:hover {
                text-decoration: underline;
            }
</style>

