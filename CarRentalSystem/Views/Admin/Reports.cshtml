@model IEnumerable<CarRentalSystem.Models.Report>

<div class="container mt-5">
    <h2 class="text-center mb-4">Reports</h2>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="GenerateReport" class="btn btn-success">Generate New Report</a>
        <button class="btn btn-primary" id="refreshReports">Refresh</button>
    </div>

    <div class="table-responsive shadow">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Date Generated</th>
                    <th>User</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.DateGenerated.ToShortDateString()</td>
                        <td>@report.User?.UserName</td>
                        <td>@report.ReportDetails</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; 
    }

    h2 {
        font-weight: bold;
        color: #1A1A40; 
        text-transform: uppercase;
    }

    .table-responsive {
        border-radius: 5px; 
    }

    .btn {
        font-weight: bold;
    }
</style>
