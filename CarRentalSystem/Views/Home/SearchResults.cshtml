@model IEnumerable<CarRentalSystem.Models.Car>

<h2>Available Cars</h2>

@if (!Model.Any())
{
    <p>No cars available for the selected dates.</p>
}
else
{
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@car.ImagePath" alt="@car.Name" style="width:100%; height:200px;" />
                    <div class="card-body">
                        <h5>@car.Name</h5>
                        <p>Year: @car.Year</p>
                        <p>Price per day: $@car.PricePerDay</p>
                        <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">Show Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
