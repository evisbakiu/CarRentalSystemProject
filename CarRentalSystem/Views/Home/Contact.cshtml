@model CarRentalSystem.ViewModel.ContactFormModel
<div class="container py-5">
    <h1 class="text-center text-primary mb-4">Contact Us</h1>
    <p class="text-center text-muted mb-5">
        Have questions or need assistance? Fill out the form below, and our team will get back to you shortly.
    </p>

    <!-- Contact Form -->
    <form method="post" asp-action="Submit" asp-controller="Contact">
        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" id="Name" name="Name" class="form-control" placeholder="Enter your name" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" id="Email" name="Email" class="form-control" placeholder="Enter your email" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Subject" class="form-label">Subject</label>
            <input type="text" id="Subject" name="Subject" class="form-control" placeholder="Enter the subject" required>
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Message" class="form-label">Message</label>
            <textarea id="Message" name="Message" class="form-control" rows="5" placeholder="Type your message here" required></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <div class="text-end">
            <button type="submit" class="btn btn-orange">Send Message</button>
        </div>
    </form>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-4">
            @TempData["SuccessMessage"]
        </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/jquery.validate.unobtrusive.min.js"></script>

<style>
    /* General Styling */
    .container {
        max-width: 800px;
    }

    /* Headings */
    h1 {
        font-weight: bold;
    }

    .text-primary {
        color: #1A1A40; /* Deep blue */
    }

    /* Form */
    .form-control {
        border: 1px solid #dee2e6; /* Light grey border */
        border-radius: 5px;
        box-shadow: none;
    }

        .form-control:focus {
            border-color: #FFA500; /* Orange focus border */
            box-shadow: 0 0 0 0.25rem rgba(255, 165, 0, 0.25); /* Light orange focus ring */
        }

    .btn-orange {
        background-color: #FFA500;
        border: none;
        color: white;
        padding: 0.5rem 1.5rem;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .btn-orange:hover {
            background-color: #FF8C00;
        }
</style>
