@model CarRentalSystem.Models.Car

<h2>Edit Car</h2>

<form asp-action="EditCar" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>Name:</label>
        <input asp-for="Name" required />
    </div>

    <div>
        <label>License Plate:</label>
        <input asp-for="LicensePlate" required />
    </div>

    <div>
        <label>Year:</label>
        <input asp-for="Year" required />
    </div>

    <div>
        <label>Price Per Day:</label>
        <input asp-for="PricePerDay" required />
    </div>

    <div>
        <label>Category:</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
            <option value="">-- Select Category --</option>
        </select>
    </div>

    <div>
        <label>Update Image:</label>
        <input type="file" name="ImageFile" />
    </div>

    <button type="submit">Save Changes</button>
</form>
