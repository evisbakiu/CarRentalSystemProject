@model IEnumerable<CarRentalSystem.Models.Car>

<h2>Manage Cars</h2>

<a asp-action="AddCar" class="btn btn-success">Add New Car</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>License Plate</th>
            <th>Year</th>
            <th>Price Per Day</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Name</td>
                <td>@car.LicensePlate</td>
                <td>@car.Year</td>
                <td>$@car.PricePerDay</td>
                <td>
                    <a asp-action="EditCar" asp-route-id="@car.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteCar" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
