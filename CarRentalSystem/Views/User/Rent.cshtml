@model CarRentalSystem.Models.Car

<div class="container py-5">
    <div class="row mb-4">
        <!-- Car Image -->
        <div class="col-md-6">
            <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded shadow-sm">
        </div>

        <!-- Car Details -->
        <div class="col-md-6">
            <h2 class="text-primary">@Model.Name</h2>
            <p><strong>Class:</strong> @Model.Class?.Name</p>
            <p><strong>Fuel:</strong> @Model.FuelType</p>
            <p><strong>Gearbox:</strong> @Model.Gearbox</p>
            <p><strong>Fuel Usage:</strong> @Model.FuelUsage L/100km</p>
            <p><strong>Mileage:</strong> Unlimited</p>
            <p><strong>Price from:</strong> €@Model.PricePerDay / day</p>
        </div>
    </div>

    <hr />

    <!-- Additional Features -->
    <div class="mb-4">
        <h4 class="text-primary">Additional Features</h4>
        <ul class="list-group">
            @foreach (var feature in Model.Features)
            {
                <li class="list-group-item d-flex align-items-center">
                    <span class="badge bg-success me-2">✔</span> @feature.Name
                </li>
            }
        </ul>
    </div>

    <hr />

    <!-- Pickup & Return -->
    <div>
        <h4 class="text-primary">Pickup & Return</h4>
        <form method="get" asp-action="ReviewReservation" asp-controller="Reservation">
            <input type="hidden" name="CarId" value="@Model.Id" />
            <input type="hidden" name="ReturnLocation" value="Tirana International Airport (TIA), Tirana, Albania 1001" />

            <div class="mb-3">
                <label for="ReturnLocation" class="form-label">Return Location</label>
                <input type="text" id="ReturnLocation" name="ReturnLocation" class="form-control" value="Tirana International Airport (TIA), Tirana, Albania 1001" readonly />
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label for="PickUpDateTime" class="form-label">Pick-Up Date & Time</label>
                    <input type="datetime-local" id="PickUpDateTime" name="PickUpDateTime" class="form-control" required />
                </div>
                <div class="col-md-6">
                    <label for="ReturnDateTime" class="form-label">Return Date & Time</label>
                    <input type="datetime-local" id="ReturnDateTime" name="ReturnDateTime" class="form-control" required />
                </div>
            </div>

            <div class="mt-4 text-end">
                <button type="submit" class="btn btn-orange">Continue</button>
            </div>
        </form>
    </div>

    <!-- Spacer after button -->
    <div class="mt-5"></div>
</div>

<style>
    /* Image Styling */
    img {
        border-radius: 10px;
    }

    /* Features List */
    .list-group-item {
        background-color: #f8f9fa;
        border: none;
        font-size: 1rem;
    }

    /* Highlight features badge */
    .badge.bg-success {
        font-size: 0.9rem;
    }

    /* Buttons */
    .btn-orange {
        background-color: #FFA500;
        border: none;
        color: white;
        font-weight: bold;
    }

        .btn-orange:hover {
            background-color: #FF8C00;
        }
</style>
