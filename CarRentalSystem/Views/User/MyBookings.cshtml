@model IEnumerable<CarRentalSystem.Models.Reservation>

<h2>My Bookings</h2>

@if (!Model.Any())
{
    <p>You have no bookings yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Car</th>
                <th>Pick-Up Date</th>
                <th>Return Date</th>
                <th>Total Cost</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Car?.Name</td>
                    <td>@booking.StartDate.ToShortDateString()</td>
                    <td>@booking.EndDate.ToShortDateString()</td>
                    <td>$@booking.TotalCost</td>
                    <td>@booking.Status?.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
